<script>
    function DeleteDoc(id) {
        var del = confirm("Are you sure you want to delete this document?");
        if (!del)
            return;

        var dataToPost = {
            documentId: id
        }

        $.ajax(
            {
                method: "POST",
                data: dataToPost,
                url: "/Home/Delete"
            }).done(function (response) {
                window.location.reload();
                return false;
            }).fail(function (jqXHR, status) {
                alert(status);
            });
    }
</script>