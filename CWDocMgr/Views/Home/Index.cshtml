@{
    ViewData["Title"] = "Home Page";
}

@using CWDocMgr.Models
@model IndexViewModel
@{
    ViewData["Title"] = "CWDocMgr Home Page";
    Layout = "_Layout";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<a asp-controller="Home" asp-action="UploadDoc" class="btn btn-primary">Upload Document</a>
<br />

@Html.PartialAsync("_DocumentTable", Model)

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }
    </ul>
</nav>

<script>
    function DeleteDoc(id) {
        var del = confirm("Are you sure you want to delete this document?");
        if (!del)
            return;

        var dataToPost = {
            documentId: id
        }

        $.ajax(
            {
                method: "POST",
                data: dataToPost,
                url: "/Home/Delete"
            }).done(function (response) {
                window.location.reload();
                return false;
            }).fail(function (jqXHR, status) {
                alert(status);
            });
    }
</script>